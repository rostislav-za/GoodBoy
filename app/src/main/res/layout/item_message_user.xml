<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/margin_ChatMessage_to_opposite"
        android:layout_marginBottom="@dimen/magin_between_ChatMessage"
        app:cardBackgroundColor="@color/colorChatMessageUser"
        app:cardCornerRadius="@dimen/radius_ChatMessage"
        app:contentPadding="@dimen/content_padding_ChatMessage">

        <TextView
            android:id="@+id/im_user_text"
            style="@style/TextUserChatMessageStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_guidlines_horisontal"
            android:text="@string/am_hello_text" />
    </androidx.cardview.widget.CardView>
</FrameLayout>
